!!!
%html
  %head
    %title Hockey Manager
    %script{:type => "text/javascript", :src => "/vendor/jquery-1.9.1.min.js"}
    %script{:src => "/vendor/bootstrap/js/bootstrap.min.js"}
    %script{:src => "/vendor/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"}
    %link(rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.css")
    %link(rel="stylesheet" href="/vendor/fontawesome/css/font-awesome.min.css")
    %link(rel="stylesheet" href="/vendor/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css")
    / HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file:
    /[if lt IE 9]
      %script(src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")
      %script(src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js")
    %body
    .container
      %nav.nav.navbar.navbar-default.navbar-static-top
        .navbar-header
          %button.navbar-toggle{:type=>"button", :'data-toggle'=>"collapse", :'data-target'=>"#bs-example-navbar-collapse-6"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => '/'}Hockey Manager
        %ul.nav.navbar-nav
          %li
            %a{:href => "/"}Home
          %li
            %a{:href => "/secure/place"}Secret
          %li
            %a{:href => "/player"}Players
          %li
            %a{:href => "/team"}Teams
          %li
            %a{:href => "/location"}Locations
          %li
            %a{:href => "/game"}Schedule
          %li
            %a{:href => "/stats"}Stats  
    
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{:href => "#", :data => {:toggle => "dropdown"}}
              -if current_user.email == false
                Guest
                %b.caret
                %ul.dropdown-menu
                  %li
                    %a{:href => "/login"}Login
              - else  
                #{current_user.email}
                %b.caret
                %ul.dropdown-menu                  
                  %li
                    %a{:href => "/logout"}Logout
                 
      
      - if @error then
        .alert.alert-danger
          = @error
      
      - if flash[:error]
        - flash[:error].each do |err| 
          .alert.alert-danger
            = err
      
      = yield
    

